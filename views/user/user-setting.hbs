<main class="container">
  <div class="row">
    {{>left-bar route='setting'}}

    <div class="col-md-6 middle-div" style="border: 1px #E6ECF0 solid; height:750px;">
      <div class="m-5">
        <h2><strong>帳戶設定</strong></h2>
      </div>
      <hr class="mb-2">

      <form class="px-3 border-left mt-5 needs-validation" action="/users/{{currentUser.id}}/setting?_method=PUT" method="POST" novalidate>

        <div class="form-group mt-3" style="height:78px; weight:593px">
          <div class="setting-title">
            <label for="account" class="ms-3 label-text">
              帳號
            </label>
            <input type="text" class="form-control setting-input" id="account" name="account"
              value="{{currentUser.account}}" required />
              <div class="valid-feedback"></div>
              <div class="invalid-feedback">帳號不得空白</div>
          </div>
        </div>

        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div class="setting-title">
            <label for="name" class="ms-3 label-text">
              名稱
            </label>
            <input type="text" class="form-control setting-input" id="name" name="name"
              value="{{currentUser.name}}" required />
              <div class="valid-feedback"></div>
              <div class="invalid-feedback">使用者名稱不得空白</div>
          </div>
        </div>

        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div class="setting-title">
            <label for="email" class="ms-3 label-text">
              Email
            </label>
            <input type="text" class="form-control setting-input" id="email" name="email" value="{{currentUser.email}}" required />
              <div class="valid-feedback"></div>
              <div class="invalid-feedback">Email不得空白</div>
          </div>
        </div>

        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div class="setting-title">
            <label for="password" class="ms-3 label-text">
              密碼
            </label>
            <input type="password" class="form-control setting-input" id="password" name="password"/>
          </div>
        </div>

        <div class="form-group mt-2" style="height:78px; weight:593px">
          <div class="setting-title">
            <label for="passwordCheck" class="ms-3 label-text">
              密碼再確認
            </label>
            <input type="password" class="form-control setting-input" id="passwordCheck" name="passwordCheck"/>
          </div>
        </div>

        <div class="d-flex justify-content-end mt-3">
          <button class="btn btn-default dark-btn"
            style="border-radius:50px; width:88px; height:46px;padding:8px 24px 8px 24px;"
            type="submit">
            <strong>
              <font size="4">儲存</font>
            </strong>
          </button>
        </div>

      </form>
    </div>

  </div>
</main>
