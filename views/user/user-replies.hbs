<main class="container">
  <div class="row">
    {{>left-bar route='user'}}

    <div class="col-md-6 p-0" style="border: 1px #E6ECF0 solid; max-width:639px; margin-left: 278px">
      {{>user-header}}
      {{>user-profile}}
      {{>user-tabs route='replies'}}
      {{#each replies}}
      <div class="d-flex flex-column flex-wrap justify-content-center mb-2"
        style="border-bottom: 1px #E6ECF0 solid; max-width:639px; margin: 0px 12px 0px 0px;">
        <div class="d-inline-flex">
          <a href="/users/{{this.Tweet.User.id}}/tweets" style="text-decoration:none;">
            <img src="{{this.Tweet.User.avatar}}" title="source: imgur.com" style="width: 50px;height: 50px;" class="ms-4 mt-2 rounded-circle">
          </a>
          <div class="d-inline-flex flex-wrap pt-3 ms-3">
            <a href="/users/{{../user.id}}/tweets" style="text-decoration:none;">
              <h5 class="name-text">{{this.Tweet.User.name}}</h5>
            </a>
            <span class="ms-1 account-text">@{{this.Tweet.User.account}}·{{relativeTimeFromNow
              this.createdAt}}</span>
          </div>
        </div>

        <div class="d-flex flex-column align-self-start">
          <div class="pe-2" style="margin-left:88px;">
            <span class="gray-text">回覆</span>
            <a href="/users/{{this.User.id}}/tweets" style="text-decoration:none;">
              <span class="dark-text">@{{this.User.account}}</span>
            </a>
            <a href="/tweets/{{this.Tweet.id}}/replies" style="text-decoration:none;">
              <p class="mt-2 text-break dark-text">
                {{this.comment}}
              </p>
            </a>

          </div>
        </div>
      </div>
      {{/each}}

    </div>
    {{>right-bar}}
  </div>
</main>
