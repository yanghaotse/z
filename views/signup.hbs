<div class="row d-flex justify-content-center" style="text-align: top;">
  <div class="card border-light px-0" style="width: 400px; background-color: #FAFAFA; border: 0px">

    <div class="card-body ">
      <div class="mb-4 text-center">
        <img src="/image/z-high-resolution-logo.png" alt="icon" style="margin: 10px 0 20px 0" width="110" height="80">
        <h1 class="h3 font-weight-normal mb-3" style="margin: 0 0 40px 0;font-weight: bold;">建立你的帳號</h1>
      </div>

      <form class="form-signup" action="/signup" method="POST" style="width: 100%;">
        {{> account-form}}

        <button id="signup" type="submit" style="background-color:#130912;color:#FAFAFA;padding: 8px 24px;width: 356px;border: 0;display: flex;flex-direction: column;
      justify-content: center;
      align-items: center;border-radius: 50px;">註冊</button>
      </form>

      <div class="text-center">
        <p style="padding: 20px 24px;width: 356px;"><a href="/signin" style="text-decoration:none;">取消</a></p>
      </div>
    </div>
  </div>
</div>