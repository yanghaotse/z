<div class="row d-flex justify-content-center" style="text-align: top;">
  <div class="card border-light px-0 sign-up" style="width: 400px; border-radius:26px;">

    <div class="card-body ">
      <div class="mb-4 text-center">
        <img src="/image/z-high-resolution-logo-transparent.png" alt="icon" style="margin: 5px 0 20px 0; width: 120px; height:80px;">
        <h1 class="h3 font-weight-normal mb-3" style="margin: 0 0 40px 0;font-weight: bold;">建立你的帳號</h1>
      </div>

      <form class="form-signup needs-validation" action="/signup" method="POST" style="width: 100%;" novalidate>
        {{> account-form}}
        <button id="signup" type="submit" class="btn dark-btn" style="padding: 8px 24px;width: 356px;border: 0;display: flex;flex-direction: column;
      justify-content: center;
      align-items: center;border-radius: 50px;">註冊</button>
      </form>

      <div class="text-center">
        <p style="padding: 20px 24px;width: 356px;"><a href="/signin" style="text-decoration:none;">取消</a></p>
      </div>
    </div>
  </div>
</div>