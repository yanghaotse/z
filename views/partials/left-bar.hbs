<div class="col-md-3" id="left-bar">
  <div class="d-flex flex-column mb-2">
    <img src="/images/z-high-resolution-logo-transparent.png" style="width: 80px; margin-left:-20px;" class="mt-3 mb-4"/>

    <div class="d-flex mb-5">
      <a href="/tweets" style="text-decoration:none;">
      {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style=" font-weight: 700; display:inline;">
          Home</h5>
      {{else}}
        <div class="gray">
          <i class="fa-solid fa-house fa-xl ms-2 me-3"></i>
          <h5 class="fs-5" style="font-weight: 700; display:inline;">
            Home</h5>
        </div>
      {{/ifCond}}
      </a>
    </div>

    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/tweets" style="text-decoration:none;">
      {{#ifCond route 'user'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark"
          style=" font-weight: 600; display:inline;">
          Profile</h5>
      {{else}}
      <div class="gray">
        <i class="fa-solid fa-user fa-xl ms-2 me-3"></i>
        <h5 class="fs-5" style="font-weight: 600; display:inline;">
          Profile</h5>
      </div>
      {{/ifCond}}
      </a>
    </div>

    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/setting" style="text-decoration:none;">
      {{#ifCond route 'setting'}}
        <i class="fa-solid fa-gear fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style=" font-weight: 600; display:inline;">
          Setting</h5>
      {{else}}
        <div class="gray">
          <i class="fa-solid fa-gear fa-xl ms-2 me-3"></i>
          <h5 class="fs-5" style="font-weight: 600; display:inline;">
            Setting</h5>
        </div>
      {{/ifCond}}
      </a>
    </div>
    <button class="btn btn-default dark-btn post-btn"
      style="border-radius: 23px; width:158px; height: 46px; font-weight: 600; font-size:large"
      data-bs-toggle="modal" data-bs-target="#postTweet">Post</button>

    <div class="d-flex mb-5" style="margin-top: 160px;">
      <a href="/logout" class="gray" style="text-decoration:none;">
        <i class="fa-solid fa-arrow-right-from-bracket" style="display:inline;"></i>
        <h5 class="fs-5 ms-3" style="font-weight: 600; display:inline;">Log out</h5>
      </a>
    </div>
  </div>
</div>

