<div class="col-md-3 ms-5" style="width: 178px; position:fixed;margin-left:40px; background-color:#fff; border-radius:16px;">
  <div class="d-flex flex-column mb-2">
    <img src="/images/z-high-resolution-logo-transparent.png" style="width: 80px; margin-left:-20px;" class="mt-3 mb-4"/>

    <div class="d-flex mb-5">
      <a href="/tweets" style="text-decoration:none;">
      {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style=" font-weight: 700; display:inline;">
          首頁</h5>
      {{else}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 gray"></i>
        <h5 class="fs-5 gray" style="font-weight: 700; display:inline;">
          首頁</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/tweets" style="text-decoration:none;">
      {{#ifCond route 'user'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark"
          style=" font-weight: 600; display:inline;">
          個人資料</h5>
      {{else}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 gray"></i>
        <h5 class="fs-5 gray"
          style="font-weight: 600; display:inline;">
          個人資料</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 設定 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/setting" style="text-decoration:none;">
      {{#ifCond route 'setting'}}
        <i class="fa-solid fa-gear fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style=" font-weight: 600; display:inline;">
          設定</h5>
      {{else}}
        <i class="fa-solid fa-gear fa-xl ms-2 me-3 gray"></i>
        <h5 class="fs-5 gray" style="font-weight: 600; display:inline;">
          設定</h5>
      {{/ifCond}}
      </a>
    </div>
    <button class="btn btn-default dark-btn"
      style="border-radius: 23px; width:158px; height: 46px; font-weight: 600; font-size:large"
      data-bs-toggle="modal" data-bs-target="#postTweet">推文</button>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;">
        <i class="fa-solid fa-arrow-right-from-bracket gray" style="display:inline;"></i>
        <h5 class="fs-5 ms-3 gray" style="font-weight: 600; display:inline;">登出</h5>
      </a>
    </div>
  </div>
</div>