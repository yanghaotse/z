<div class="col-md-3 ms-5" style="width: 178px; position:fixed;margin-left:60px; background-color: #FAFAFA;">
  <div class="d-flex flex-column mb-2">
    <img src="/image/z-high-resolution-logo.png" style="width: 80px; margin-left:-20px;" class="mt-3 mb-4"/>

    <div class="d-flex mb-5">
      <a href="/tweets" style="text-decoration:none;">
      {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3" style="color: #130912;"></i>
        <h5 class="fs-5" style="color: #130912; font-weight: 700; display:inline;">
          首頁</h5>
      {{else}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3" style="color: #8c8c8c;"></i>
        <h5 class="fs-5" style="color: #8c8c8c; font-weight: 700; display:inline;">
          首頁</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/tweets" style="text-decoration:none;">
      {{#ifCond route 'user'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3" style="color: #130912;"></i>
        <h5 class="fs-5"
          style="color: #130912; font-weight: 600; display:inline;">
          個人資料</h5>
      {{else}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3" style="color: #8c8c8c;"></i>
        <h5 class="fs-5"
          style="color: #8c8c8c; font-weight: 600; display:inline;">
          個人資料</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 設定 --}}
    <div class="d-flex mb-5">
      <a href="/users/{{currentUser.id}}/setting" style="text-decoration:none;">
      {{#ifCond route 'setting'}}
        <i class="fa-solid fa-gear fa-xl ms-2 me-3" style="color: #130912;"></i>
        <h5 class="fs-5" style="color: #130912; font-weight: 600; display:inline;">
          設定</h5>
      {{else}}
        <i class="fa-solid fa-gear fa-xl ms-2 me-3" style="color: #8c8c8c;"></i>
        <h5 class="fs-5" style="color: #8c8c8c; font-weight: 600; display:inline;">
          設定</h5>
      {{/ifCond}}
      </a>
    </div>
    <button class="btn btn-default"
      style="background-color: #130912;border-radius: 23px; color: white; width:178px; height: 46px;"
      data-bs-toggle="modal" data-bs-target="#postTweet">推文</button>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;">
        <i class="fa-solid fa-arrow-right-from-bracket" style="color: #44444f; display:inline;"></i>
        <h5 class="fs-5 ms-3" style="color: #44444F; font-weight: 600; display:inline;">登出</h5>
      </a>
    </div>
  </div>
</div>