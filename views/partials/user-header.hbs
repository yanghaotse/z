<div class="row mb-3"
  style="height: 59px; margin: 16px 0px 0px 0px; max-width:100%;">
  <a href="javascript:history.back()"  style="text-decoration: none;"
    class="col-auto d-flex align-items-center dark">
    <i class="fa-solid fa-arrow-left" style="font-size: 1.2em;"></i>
  </a>
  <a href="/users/{{user.id}}/tweets" class="col-auto d-flex flex-column align-items-start justify-content-center"
    style="text-decoration: none;">
    <span class="h5 dark" style="line-height: 15px; font-size: 18px; font-weight: 900;">{{user.name}}</span>
    <span style="font-size: 13px; line-height: 15px;" class="gray">{{user.tweetsCount}}推文</span>
  </a>
</div>