<div class="col-md-3 ms-5 admin-left-bar" style="max-width: 278px; position:fixed; margin-left:60px;">
  <div class="d-flex flex-column mb-2">
    <img src="/image/z-high-resolution-logo-transparent.png" style="width: 80px; margin-left:-20px;" class="mt-3 mb-4"/>
    
    <div class="d-flex mb-5">
      <a href="/admin/tweets" style="text-decoration:none;">
      {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 700; display:inline;">
          推文清單</h5>
      {{else}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 gray"></i>
        <h5 class="fs-5 gray" style="font-weight: 700; display:inline;">推文清單</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/admin/users" style="text-decoration:none;">
      {{#ifCond route 'users'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 600; display:inline;">
          使用者資料</h5>
      {{else}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 gray"></i>
        <h5 class="fs-5 gray"
          style="font-weight: 600; display:inline;">
          使用者資料</h5>
      {{/ifCond}}
      </a>
    </div>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;">
        <i class="fa-solid fa-arrow-right-from-bracket ms-2 me-3 gray" style="display:inline;"></i>
        <h5 class="fs-5 ms-3 gray" style="font-weight: 600; display:inline;">登出</h5>
      </a>
    </div>
  </div>
</div>