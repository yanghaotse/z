<div class="col-md-3 ms-5" id="admin-left-bar" style="max-width: 278px; position:fixed; margin-left:60px;">
  <div class="d-flex flex-column mb-2">
    <img src="/images/z-high-resolution-logo-transparent.png" style="width: 80px; margin-left:-20px;" class="mt-3 mb-4"/>
    
    <div class="d-flex mb-5">
      <a href="/admin/tweets" style="text-decoration:none;">
      {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 700; display:inline;">
          推文清單</h5>
      {{else}}
        <div class="gray">
          <i class="fa-solid fa-house fa-xl ms-2 me-3"></i>
          <h5 class="fs-5" style="font-weight: 700; display:inline;">推文清單</h5>
        </div>
      {{/ifCond}}
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/admin/users" style="text-decoration:none;">
      {{#ifCond route 'users'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 600; display:inline;">
          使用者資料</h5>
      {{else}}
        <div class="gray">
          <i class="fa-solid fa-user fa-xl ms-2 me-3"></i>
          <h5 class="fs-5" style="font-weight: 600; display:inline;">
            使用者資料</h5>
        </div>
      {{/ifCond}}
      </a>
    </div>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;" class="gray">
        <i class="fa-solid fa-arrow-right-from-bracket ms-2 me-3" style="display:inline;"></i>
        <h5 class="fs-5 ms-3" style="font-weight: 600; display:inline;">Log out</h5>
      </a>
    </div>

  </div>
</div>

{{!-- responsive left-bar --}}
<div class="btn dark-btn" id="menu" data-bs-toggle="offcanvas" data-bs-target="#left-offcanvas"
  aria-controls="left-offcanvas">
  <i class="fa-solid fa-bars fa-2xl" style="color:#fff;"></i>
</div>

<div class="offcanvas offcanvas-start" tabindex="-1" id="left-offcanvas" aria-labelledby="offcanvas-label"
  style="width:250px;">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title" id="offcanvas-label">
      <img src="/images/z-high-resolution-logo-transparent.png" style="width: 80px; margin-left:-20px;" class="mt-3" />
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
  </div>
  <div class="offcanvas-body">

    <div class="d-flex mb-5">
      <a href="/admin/tweets" style="text-decoration:none;">
        {{#ifCond route 'tweets'}}
        <i class="fa-solid fa-house fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 700; display:inline;">
          推文清單</h5>
        {{else}}
        <div class="gray">
          <i class="fa-solid fa-house fa-xl ms-2 me-3 gray"></i>
          <h5 class="fs-5 gray" style="font-weight: 700; display:inline;">推文清單</h5>
        </div>
        {{/ifCond}}
      </a>
    </div>
    {{!-- 個人資料 --}}
    <div class="d-flex mb-5">
      <a href="/admin/users" style="text-decoration:none;">
        {{#ifCond route 'users'}}
        <i class="fa-solid fa-user fa-xl ms-2 me-3 dark"></i>
        <h5 class="fs-5 dark" style="font-weight: 600; display:inline;">
          使用者資料</h5>
        {{else}}
        <div class="gray">
          <i class="fa-solid fa-user fa-xl ms-2 me-3"></i>
          <h5 class="fs-5" style="font-weight: 600; display:inline;">
            使用者資料</h5>
        </div>
        {{/ifCond}}
      </a>
    </div>
    {{!-- logout --}}
    <div class="d-flex mb-4" style="margin-top: 160px;">
      <a href="/logout" style="text-decoration:none;" class="gray">
        <i class="fa-solid fa-arrow-right-from-bracket ms-2 me-3" style="display:inline;"></i>
        <h5 class="fs-5 ms-3" style="font-weight: 600; display:inline;">Log out</h5>
      </a>
    </div>


  </div>
</div>