<div class="col-md-3 mt-4 pe-0" style="width: 310px;" id="right-bar">
  <div class="d-flex flex-column justify-content-start pe-1 right-bar-div"
    style=" border-radius: 16px; max-width:100%;">

    <div class="px-4 py-3 border-bottom">
      <h4 class="dark" style="font-weight: 500;">推薦用戶</h4>
    </div>

    <div id="recommend-scroll">
      {{#each recommendFollowings}}
      <li class="list-group-item right-li" style="border: none; padding: 10px 0 0 0;">
        <div class="row justify-content-around align-items-center" style="max-width: 100%; margin-left: 0;">
      
          <div class="col-3 d-flex justify-content-center align-items-center">
            <a href="/users/{{this.id}}/tweets">
              <img src="{{#if this.avatar}}{{this.avatar}}{{else}}https://i.imgur.com/hepj9ZS_d.webp?maxwidth=760&fidelity=grand{{/if}}" alt="user-avatar" width="50" height="50" class="rounded-circle">
            </a>
          </div>
          <div class="col-4 pt-3 d-flex flex-column align-items-start" style="margin-left:-10px">
            <a href="/users/{{this.id}}/tweets" style="text-decoration: none;">
              <h5 class="name-text" style="line-height: 18px; width:inherit;">{{this.name}}</h5>
              <p class="text-muted account-text" style="line-height: 16px; width:inherit;">@{{this.account}}</p>
            </a>
          </div>
          {{!-- 追蹤鈕 --}}
          {{#if isNotUser}}
          <div class="col-5 d-flex justify-content-end">
            {{#if this.isFollowed}}
            <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
              <button type="submit" class="btn dark-btn"
                style="height:40px; font-size: 15px; border-radius: 50px;">正在追蹤</button>
            </form>
            {{else}}
            <form action="/followships" method="POST" style="display: contents;">
              <input type="text" name="id" value="{{this.id}}" class="d-none">
              <button type="submit" class="btn btn-outline-light btn-block"
                style="width:64px; height:40px; font-size: 15px; border-radius: 50px;">
                追蹤
              </button>
            </form>
            {{/if}}
          </div>
          {{/if}}
        </div>
      </li>
      {{/each}}
    </div>
    


  </div>
</div>