<div class="col-md-3 mt-4 pe-0" style="width: 283px;overflow-y:scroll;top: 0;bottom:0;" id="right-sidebar">
  <div class="d-flex flex-column justify-content-start pe-1"
    style="background-color: #FAFAFB; border-radius: 16px; width:273px">

    <div class="px-4 py-3 border-bottom">
      <h4 style="color: #171725; font-weight: 500;">推薦追蹤</h4>
    </div>

    {{#each recommendFollowings}}
    <li class="list-group-item bg-light" style="border: none">
      <div class="row justify-content-around align-items-center">

        <div class="col-3 d-flex justify-content-center align-items-center">
          <a href="/users/{{this.id}}/tweets">
            <img src="{{this.avatar}}" alt="user-avatar" width="50" height="50" class="rounded-circle">
          </a>
        </div>
        <div class="col-4 pt-3 d-flex flex-column align-items-start" style="margin-left:-10px">
          <a href="/users/{{this.id}}/tweets" style="text-decoration: none;">
            <h5 style="line-height: 18px; width:inherit; color:#130912">{{this.name}}</h5>
            <p class="text-muted" style="line-height: 16px; width:inherit;">@{{this.account}}</p>
          </a>
        </div>
        {{!-- 追蹤鈕 --}}
        <div class="col-5 d-flex justify-content-end">
          {{#if this.isFollowed}}
          <form action="/followships/{{this.id}}?_method=DELETE" method="POST" style="display: contents;">
            <button type="submit" class="btn btn-primary"
              style="height:40px; font-size: 15px; border-radius: 50px; background-color: #130912; border:none;">正在追蹤</button>
          </form>
          {{else}}
          <form action="/followships" method="POST" style="display: contents;">
            <input type="text" name="id" value="{{this.id}}" class="d-none">
            <button type="submit" class="btn btn-outline-light btn-block"
              style="width:64px; height:40px; font-size: 15px; border-radius: 50px; border-color: #130912;">
              <font color="#130912">追蹤</font>
            </button>
          </form>
          {{/if}}
        </div>

      </div>
    </li>

    {{/each}}


  </div>
</div>